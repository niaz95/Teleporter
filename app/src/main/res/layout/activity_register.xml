<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/firstnameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:text="First Name:"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lastnameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/firstnameTextView"
        android:layout_below="@+id/firstnameTextView"
        android:layout_marginTop="46dp"
        android:text="Last Name: " />

    <TextView
        android:id="@+id/phonenoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/firstnameTextView"
        android:layout_below="@+id/lastnameTextView"
        android:layout_marginTop="56dp"
        android:text="Mobile Number: " />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lastnameTextView"
        android:layout_below="@+id/phoneNoEditText"
        android:text="Email: " />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/passwordEditTextIn"
        android:layout_below="@+id/emailTextView"
        android:layout_marginTop="40dp"
        android:text="Password: " />

    <TextView
        android:id="@+id/retypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/passwordTextView"
        android:layout_below="@+id/passwordEditTextIn"
        android:text="Confirm Password:" />

    <Button
        android:id="@+id/submitButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/retypeTextView"
        android:layout_below="@+id/retypeEditText"
        android:background="@color/colorOrange"
        android:layout_marginTop="48dp"
        android:text="Submit" />

    <Button
        android:id="@+id/cancelButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submitButton"
        android:layout_alignBottom="@+id/submitButton"
        android:layout_alignEnd="@+id/retypeEditText"
        android:layout_marginEnd="32dp"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"
        android:text="Cancel" />

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_marginEnd="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/firstnameTextView"
        android:layout_alignStart="@+id/firstnameTextView"

        />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phonenoTextView"
        android:layout_below="@+id/lastnameTextView"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignEnd="@+id/firstNameEditText" />

    <EditText
        android:id="@+id/passwordEditTextIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phoneNoEditText"
        android:layout_below="@+id/passwordTextView"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignEnd="@+id/phoneNoEditText" />

    <EditText
        android:id="@+id/phoneNoEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lastNameEditText"
        android:layout_alignStart="@+id/phonenoTextView"
        android:layout_below="@+id/phonenoTextView"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false" />

    <EditText
        android:id="@+id/emailEditTextIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="@+id/emailTextView"
        android:layout_alignStart="@+id/phonenoTextView"
        android:layout_below="@+id/emailTextView"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_alignEnd="@+id/passwordEditTextIn" />

    <EditText
        android:id="@+id/retypeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/retypeTextView"
        android:layout_below="@+id/retypeTextView"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignEnd="@+id/passwordEditTextIn" />

    <RadioButton
        android:id="@+id/teleporterRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Register as a Teleporter Driver"
        android:layout_below="@+id/retypeEditText"
        android:layout_alignStart="@+id/emailTextView" />

</RelativeLayout>